<?xml version='1.0' encoding='utf-8'?>
<widget id="com.debnath.tasktimer" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Task Timer</name>
    <description>
	Track how much time you are spending on your project
    </description>
    <author email="jayanta.dn@gmail.com" href="https://github.com/jayantadn/TaskTimer">
	Jayanta Debnath
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/launcher_icon/web_hi_res_512.png" />
</widget>
